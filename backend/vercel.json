{
  "version": 2,
  "builds": [
    { "src": "server.ts", "use": "@vercel/node" },
    { "src": "routes/**/*.ts", "use": "@vercel/node" },
    { "src": "middleware/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.ts" },
    { "src": "/uploads/(.*)", "dest": "/uploads/$1" }
  ]
}
